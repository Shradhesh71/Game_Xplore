<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GameXplore | Football</title>
    <link rel="stylesheet" href="/veiws/main.css" />
    <link rel="stylesheet" href="/veiws/nav.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
        .clubs{
            display: flex;
            flex-wrap: wrap;
        }
        .card{
            flex: 1 0 21%; /* explanation below */
            margin: 5px;
            height: 100px;
        }
    </style>
  </head>
  <body>
    <%- include("partials/nav"); -%>
    <div class="container mt-5 pt-5">
      <div class="clubs flex ">
        <h1>All The FootBall Clubs</h1>
        <% let i=0; data.forEach(item=>{ %>
            
        <div class="card" style="width: 18rem">
          <!-- <img src="" class="card-img-top" alt="..." /> -->
          <div class="card-body">
            <h5 class="card-title"><%= data[i++].name %></h5>            
            <a href="/footplayer/<%= data[0].id %>" class="btn btn-primary">Details</a>
          </div>
        </div>
        <%}  ) %>
      </div>
    </div>
    <%- include("partials/footer"); -%>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
