passport.use(
  new GoogleStrategy(
    {
      clientID:
        process.env.GOOGLE_CLIENT_ID,
      clientSecret: process.env.CLIENT_SECRET,
      callbackURL: "http://localhost:3000/auth/google/callback",
      passReqToCallback: true,
    },
    (req, accessToken, refreshToken, profile, done) => {
      console.log(profile);
      console.log(profile.displayName);
      Gameuser.findOrCreate({ googleId: profile.id }, (err, user) => {
        return done(err, user);
      });
    },
  ),
);

Gameuser.register(newUser, req.body.password, (err, user) => {
  if (err) {
    console.log(err);
    res.redirect("/register");
    console.log("Register Failed");
  } else {
    passport.authenticate("local", {
      successRedirect: "/", // Redirect after successful registration
      failureRedirect: "/register", // Redirect if registration fails
      // failureFlash: true            // Enable flash messages for error handling
    })(req, res);
  }
});

//  req.body are passed as text strings
// for request number , num = number(req.body.number)
//  for request float , float = parsefloat(req.body.floatnumber)

